{
  "compilerOptions": {
    "experimentalDecorators": true,                      
    "target": "es2016",                                  
    "emitDecoratorMetadata": true,                       
    "module": "commonjs",                                
    "rootDir": "./",                                     
    "typeRoots": ["src/types/interfaces", "./node_modules/@types"],
    "outDir": "./dist",                             
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,       
    "strict": true,                                 
    "skipLibCheck": true                            
  }
}
